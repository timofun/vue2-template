.el-table .el-table__body-wrapper {
  overflow-y auto
}

.el-table__body .el-table__row td
  padding: 0;
  font-size: 13px;
  color: #666;
  height: 70px

.new-label_container
  .el-table__body-wrapper
    height auto!important
    min-height 160px
