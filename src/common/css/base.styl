@import "variable.styl"

html, body, .app-wrapper {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

#app
  width 100%;
  height: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: #2c3e50;

textarea
  font-family: "Microsoft YaHei"

/* 字体颜色*/
.text-color-red
  color: red

/* 图标样式 */
.icon
  display: inline-block;
  width: 40px;
  height: 100%;
  z-index: 99;
  background: url('../../assets/images/sprite_input.png') no-repeat 0 0

.icon.icon-man {
  background-position: 8px -124px;
}

.icon.icon-pw {
  background-position: 9px -173px;
}

.icon.icon-safe {
  background-position: 9px -271px;
}

.icon.icon-mobile-phone {
  background-position: 10px -221px;
}

.icon.icon-com {
  background-position: 10px -319px;
}

.icon.icon-industry {
  background-position: 10px -320px;
}

.icon.icon-phone {
  background-position: 1px -841px;
}

.icon.icon-clover {
  background-position: 10px -367px;
}
/* ---------------------------------------- */

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 6px;
  height: 8px;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track {
  border-radius: 20px;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb {
  border-radius: 8px;
  background-color: hsla(220,4%,58%,.3);
}
/* ---------------------------------------- */

/* 动画 */
/*fade-transform*/
.fade-transform-leave-active,
.fade-transform-enter-active {
  transition: all .3s;
}

.fade-transform-enter {
  opacity: 0;
  transform: translateX(-20px);
}

.fade-transform-leave-to {
  opacity: 0;
  transform: translateX(20px);
}
/* -----------------------------------------*/

/* 侧滑------------------------------------ */
.move-enter-active, .move-leave-active
  enter-active()
.move-enter, .move-leave-active
  leave-active()
/* -----------------------------------------*/

/* ele覆盖--------------------------------- */

.el-menu {
  border-right none
}

.el-upload-list--picture-card .el-upload-list__item-thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.el-input-group__append button.el-button.error_phone_number {
  cursor not-allowed
}
.el-input-group__append button.el-button.right_phone_number {
  padding 15px 22px
  background-color: $color;
  color: #fff;
  cursor pointer
}

fieldset
  padding: 20px;
  border: 1px solid #dedede;
  legend
    padding: 0 10px;

fieldset + fieldset
  margin-top 20px

.full-page-bottom
  width 1000px
  .el-notification__content
    font-size 12px

//.el-date-picker {
//  width: 300px;
//}

.el-form-item__content, .el-form-item__label
  line-height 36px

.el-form-item
  margin-bottom: 20px;

.el-input__inner
  height 36px
  line-height 36px

.el-input__icon
  line-height 36px

.el-form-item__error
  padding-top 2px

/* input右下角字数提示样式 */
.el-input__count
  line-height initial

.el-input.is-disabled > .el-input__inner {
  color: #333;
}

.el-textarea.is-disabled .el-textarea__inner {
