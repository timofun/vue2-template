// 调拨待审
.el-tag.purple
  border: 1px solid #dcc0eb;
  background-color: #f7f2fd;
  color: #9b3bcc;
// 处置待审
.el-tag.roseo
  border: 1px solid #f6c3ed;
  background-color: #fff8fe;
  color: #dc4bc2

.el-button
  padding: 7px 20px
  font-size: 12px

.code-btn
  padding: 15px 20px;
  border-radius: 0 4px 4px 0;
span.skyblue
  color: #409eff;
span.orange
  color: #ff943d;
span.red
