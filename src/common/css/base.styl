.img-swiper-cmp {
  .el-carousel__container {
    height 60vh
  }
  .el-carousel__button {
    background-color #dedede
  }
}

// 去掉upload组件删除提示语
.el-icon-close-tip {
  display none!important
}
.table-btn-img-wrapper {
  display flex
  .table-btn-img {
    height 30px;
    &:hover {
      cursor pointer
    }
    & + .table-btn-img {
      margin-left 10px
    }
  }
}

.el-form-item {
  .el-select {
    width 100%
    .el-input {
      width 100%
    }
  }
