  padding-left 34px

.el-table [class*=el-table__row--level] .el-table__expand-icon
  margin-left -23px

.el-table__placeholder
  width 0

.el-table__expanded-cell
  background-color: #fafcff;
  .el-form-item__label
    font-size 13px
    color #aaaaaa
  .el-form-item__content
    font-size 13px
    color #666666
    i
      cursor pointer
      font-size 13px
      color $color
/*el-tag*/
