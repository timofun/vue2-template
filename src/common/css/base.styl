    width 100%
  }
}

.el-form-item {
  .el-form-item__label {
    text-align-last: justify;
    text-align: justify;
    text-justify: distribute-all-lines;
  }
}

.ql-toolbar.ql-snow {
  padding 0 10px!important
}

// 为了处理form表单item元素有动态新增和删除的情况
.form-item-flex {
  position relative
  margin-bottom 10px

  > i {
    position absolute
    right: -30px;
    top: 50%;
    margin-top: -10px;
    font-size 20px
    color $color-button

    &.el-icon-remove {
      color $color-sub-theme
    }

    &:hover {
      cursor pointer
    }
  }
}

// 增删el-form-item
.el-form-item.isCurd {
  .el-form-item__content {
    display flex
    flex-wrap: wrap
    justify-content space-between
    .curd-flex-item {
      display flex
      align-items center
      margin-bottom 10px
      .btn {
        display: inline-block;
        width: 80px;
        height: 30px;
        margin-left 10px
        line-height: 30px;
        text-align: center;
        border-radius 2px
        border: 1px solid $color-button
        color $color-button
        &.del {
          border-color: $color-sub-theme
          color $color-sub-theme
        }
        &:hover {
          cursor pointer
        }
      }
    }
    &::before {
      display:none;
    }
    &::after {
      display:none;
    }
  }
}

// 处理input输入框在radio里面样式问题
.el-radio {
  .el-input__suffix-inner {
    line-height 36px!important
  }
}

// el-radio-group
.el-radio-group {
  .el-radio-button__inner {
    padding 6px 31px
    background-color #cccccc;
    color $color-w
    border 1px solid #cccccc;
  }
}

