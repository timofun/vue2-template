// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 1px
border-top-1px($style = solid)
  position: relative
  &::after
    content: ""
    pointer-events: none
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border-top: 1px $style rgba(0, 0, 0, 0.1);
    box-sizing border-box
    width 100%
    height 100%
    @media (min-resolution: 2dppx)
      width: 200%
      height: 200%
      transform: scale(.5)
    @media (min-resolution: 3dppx)
      width: 300%
      height: 300%
      transform: scale(.333)

// 下1px
border-bottom-1px($style = solid)
  position: relative
  &::after
    content: ""
    pointer-events: none
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border-bottom: 1px $style rgba(0, 0, 0, 0.1);
    box-sizing border-box
    width 100%
    height 100%
    @media (min-resolution: 2dppx)
      width: 200%
      height: 200%
      transform: scale(.5)
    @media (min-resolution: 3dppx)
      width: 300%
      height: 300%
      transform: scale(.333)

// 清除浮动
clear-float()
  content: " "
  display: block
  height: 0
  clear: both

// 盒子阴影
box-shadow()
  box-shadow: 0 2px 4px 0 rgba(0,0,0,.12), 0 0 6px 0 rgba(0,0,0,.04)

enter-active()
  transition: all 0.2s linear
  transform: translate3d(0, 0, 0)

leave-active()
  opacity: 0
  transform: translate3d(100%, 0, 0)
